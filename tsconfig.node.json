{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* لازم برای پروژه‌های مرجع */
    "composite": true,

    /* مخصوص Node / Vite config */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* خروجی نمی‌خواهیم، فقط بررسی تایپ */
    "noEmit": true,

    /* Node typings برای path, url, import.meta.url */
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}
